# Application Configuration
PORT=8000
WORKER_PORT=5100
APP_ENV=local

# Database Configuration
BLUEPRINT_DB_HOST=localhost
BLUEPRINT_DB_PORT=5432
BLUEPRINT_DB_DATABASE=blueprint
BLUEPRINT_DB_USERNAME=your_db_username
BLUEPRINT_DB_PASSWORD=your_db_password
BLUEPRINT_DB_SCHEMA=public

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URL=http://localhost:8000/api/auth/google/callback

# Discord OAuth Configuration (Optional)
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URL=http://localhost:8080/api/auth/discord/callback

# AWS Configuration
AWS_REGION=us-east-1
S3_BUCKET_NAME=your_s3_bucket_name
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# AI Services
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# Google Cloud Platform Configuration (for Vertex AI and Speech-to-Text)
# See GOOGLE_CLOUD_AUTH.md for detailed setup instructions

# Required: Your Google Cloud Project ID
GCP_PROJECT_ID=your_gcp_project_id

# Optional: Google Cloud region (defaults to us-central1)
GCP_LOCATION=us-central1

# Authentication Options (choose one):

# Option 1: Application Default Credentials (Recommended for development)
# Run: gcloud auth application-default login
# No additional environment variable needed

# Option 2: Service Account Key File (For production/Docker)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# Option 3: Service Account Key as JSON String (Not recommended)
# GOOGLE_APPLICATION_CREDENTIALS_JSON={"type":"service_account",...}